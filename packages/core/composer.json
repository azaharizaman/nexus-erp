{
    "name": "azaharizaman/erp-core",
    "description": "Core ERP functionality including multi-tenancy, authentication, and audit logging",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Azahari Zaman",
            "email": "azahari@nexusenvision.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^12.0",
        "laravel/sanctum": "^4.2",
        "spatie/laravel-activitylog": "^4.8",
        "spatie/laravel-permission": "^6.0"
    },
    "require-dev": {
        "pestphp/pest": "^4.0",
        "laravel/pint": "^1.18"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\Erp\\Core\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\Erp\\Core\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Nexus\\Erp\\Core\\CoreServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
