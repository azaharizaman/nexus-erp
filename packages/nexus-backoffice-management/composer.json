{
    "name": "nexus/backoffice-management",
    "description": "A Laravel package for managing hierarchical company structures, offices, departments, staff, and units",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "package",
        "backoffice",
        "company",
        "office",
        "department",
        "staff",
        "hierarchy",
        "organization"
    ],
    "authors": [
        {
            "name": "Azahari Zaman",
            "email": "azaharizaman@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^10.0 || ^11.0 || ^12.0 || 13.0.x-dev",
        "illuminate/database": "^10.0 || ^11.0 || ^12.0 || 13.0.x-dev",
        "illuminate/console": "^10.0 || ^11.0 || ^12.0 || 13.0.x-dev",
        "nexus/contracts": "dev-main"
    },
    "require-dev": {
        "mockery/mockery": "^1.6",
        "orchestra/testbench": "^9.0|^10.0",
        "php-coveralls/php-coveralls": "^0.1.0",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.0|^11.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\BackofficeManagement\\": "src/",
            "Nexus\\BackofficeManagement\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\BackofficeManagement\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Nexus\\BackofficeManagement\\BackOfficeServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "analyse": "vendor/bin/phpstan analyse"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
