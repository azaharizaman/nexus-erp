{
    "name": "nexus/manufacturing",
    "description": "Cohesive manufacturing execution system for PHP/Laravel - BOM, work orders, production reporting, quality control, and traceability",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "manufacturing",
        "mrp",
        "bom",
        "work-order",
        "production",
        "quality-control",
        "traceability",
        "laravel",
        "nexus-erp"
    ],
    "authors": [
        {
            "name": "Nexus ERP Team",
            "email": "dev@nexus-erp.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "illuminate/support": "^12.0",
        "illuminate/database": "^12.0"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "orchestra/testbench": "^9.0",
        "phpstan/phpstan": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\Manufacturing\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\Manufacturing\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Nexus\\Manufacturing\\ManufacturingServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
