{
    "name": "nexus/inventory",
    "description": "A headless, contract-driven Laravel package for managing inventory. It provides a robust backend for tracking stock levels, movements, and valuation without imposing any UI constraints.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Nexus\\InventoryManagement\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\InventoryManagement\\Database\\Factories\\": "database/factories/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Nexus\\InventoryManagement\\InventoryManagementServiceProvider"
            ],
            "aliases": {
                "Inventory": "Nexus\\InventoryManagement\\Facades\\Inventory"
            }
        }
    },
    "authors": [
        {
            "name": "Azahari Zaman",
            "email": "azaharizaman@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "^8.2",
        "illuminate/support": "^10.0 || ^11.0 || ^12.0 || 13.0.x-dev",
        "illuminate/database": "^10.0 || ^11.0 || ^12.0 || 13.0.x-dev",
        "illuminate/contracts": "^10.0 || ^11.0 || ^12.0 || 13.0.x-dev",
        "symfony/polyfill-mbstring": "^1.27",
        "composer/installers": "^2.2",
        "nesbot/carbon": "^2.71 || ^3.0",
        "nexus/contracts": "dev-main",
        "nexus/uom-management": "dev-main",
        "nexus/backoffice-management": "dev-main"
    },
    "require-dev": {
        "phpunit/phpunit": "12.5.x-dev"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true
        }
    }
}
