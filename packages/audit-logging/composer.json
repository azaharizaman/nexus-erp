{
    "name": "azaharizaman/erp-audit-logging",
    "description": "Comprehensive audit logging system for ERP with event-based recording, searchable audit trails, and compliance-ready immutable logs",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Azahari Zaman",
            "email": "azahari@nexusenvision.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^12.0",
        "spatie/laravel-activitylog": "^4.8",
        "league/csv": "^9.0"
    },
    "require-dev": {
        "pestphp/pest": "^4.0",
        "laravel/pint": "^1.18",
        "barryvdh/laravel-dompdf": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\Erp\\AuditLogging\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\Erp\\AuditLogging\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Nexus\\Erp\\AuditLogging\\AuditLoggingServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
