{
    "name": "nexus/workflow",
    "description": "Progressive workflow and state machine engine for PHP/Laravel - from 5-minute blog post state machines to enterprise-grade ERP approval automation",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "workflow",
        "state-machine",
        "bpm",
        "approval",
        "laravel",
        "nexus-erp"
    ],
    "authors": [
        {
            "name": "Nexus ERP Team",
            "email": "dev@nexus-erp.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^12.0",
        "illuminate/database": "^12.0"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "orchestra/testbench": "^9.0",
        "phpstan/phpstan": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\Workflow\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\Workflow\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Nexus\\Workflow\\WorkflowServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
