{
    "name": "nexus/sequencing",
    "description": "Automated serial number generation system with configurable patterns, atomic generation, and tenant isolation",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Azahari Zaman",
            "email": "azahari@nexusenvision.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "laravel/framework": "^12.0",
        "lorisleiva/laravel-actions": "^2.0"
    },
    "require-dev": {
        "laravel/pint": "^1.18",
        "phpstan/phpstan": "^1.12",
        "rector/rector": "^1.0",
        "infection/infection": "^0.27"
    },
    "scripts": {
        "analyse:core": "phpstan analyse --configuration=phpstan-core-purity.neon --memory-limit=1G",
        "refactor:core": "rector process --config=rector-core.php --dry-run",
        "refactor:core:fix": "rector process --config=rector-core.php",
        "test:core-purity": "phpstan analyse --configuration=phpstan-core-purity.neon --no-progress --error-format=table",
        "test:mutation": "infection --threads=4 --min-msi=95 --min-covered-msi=95",
        "format": "pint"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\Sequencing\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\Sequencing\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Nexus\\Sequencing\\SequencingServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "infection/extension-installer": false
        }
    }
}
