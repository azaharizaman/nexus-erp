{
    "name": "nexus/org-structure",
    "description": "Organization structure (units, positions, reporting) with directory sync contracts (LDAP/AD/SCIM).",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/database": "^11.0|^12.0",
        "illuminate/events": "^11.0|^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0|^10.0",
        "pestphp/pest": "^2.0|^3.0",
        "pestphp/pest-plugin-laravel": "^2.0|^3.0",
        "laravel/legacy-factories": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\OrgStructure\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\OrgStructure\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Nexus\\OrgStructure\\OrgStructureServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
