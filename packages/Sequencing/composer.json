{
    "name": "nexus/sequencing",
    "description": "Framework-agnostic atomic serial number generation system with configurable patterns and tenant isolation",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Azahari Zaman",
            "email": "azahari@nexusenvision.com"
        }
    ],
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.12",
        "rector/rector": "^1.0"
    },
    "scripts": {
        "analyse": "phpstan analyse src --level=8",
        "test": "phpunit"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\Sequencing\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\Sequencing\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
