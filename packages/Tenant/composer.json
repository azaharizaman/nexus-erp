{
    "name": "nexus/tenancy",
    "description": "Multi-tenancy management package for Nexus ERP - Provides tenant isolation, context management, and impersonation",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "multi-tenancy",
        "tenant",
        "saas",
        "isolation"
    ],
    "authors": [
        {
            "name": "Azahari Zaman",
            "email": "azaharizaman@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "illuminate/support": "^10.0 || ^11.0 || ^12.0 || 13.0.x-dev",
        "illuminate/database": "^10.0 || ^11.0 || ^12.0 || 13.0.x-dev",
        "illuminate/console": "^10.0 || ^11.0 || ^12.0 || 13.0.x-dev",
        "lorisleiva/laravel-actions": "^2.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.6",
        "orchestra/testbench": "^9.0|^10.0",
        "phpunit/phpunit": "^10.0|^11.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\Tenancy\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\Tenancy\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Nexus\\Tenancy\\TenancyServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
