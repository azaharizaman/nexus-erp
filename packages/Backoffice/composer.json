{
    "name": "nexus/backoffice",
    "description": "Framework-agnostic package for managing hierarchical organizational structures including companies, offices, departments, staff, and units",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "nexus",
        "backoffice",
        "company",
        "office",
        "department",
        "staff",
        "hierarchy",
        "organization",
        "framework-agnostic"
    ],
    "authors": [
        {
            "name": "Azahari Zaman",
            "email": "azaharizaman@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.0|^11.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\Backoffice\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\Backoffice\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Nexus\\Backoffice\\BackofficeServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "analyse": "vendor/bin/phpstan analyse"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
