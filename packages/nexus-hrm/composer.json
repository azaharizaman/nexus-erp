{
    "name": "nexus/hrm",
    "description": "Human Resource Management atomic package for Nexus ERP - Employee Lifecycle, Leave & Attendance, Performance Management",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "nexus",
        "erp",
        "hrm",
        "human-resources",
        "employee-management",
        "leave-management",
        "attendance",
        "performance-management"
    ],
    "authors": [
        {
            "name": "Azahari Zaman",
            "email": "azaharizaman@example.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/database": "^11.0|^12.0",
        "illuminate/events": "^11.0|^12.0",
        "illuminate/validation": "^11.0|^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0|^10.0",
        "pestphp/pest": "^2.0|^3.0",
        "pestphp/pest-plugin-laravel": "^2.0|^3.0",
        "phpstan/phpstan": "^1.10",
        "laravel/pint": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\Hrm\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\Hrm\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Nexus\\Hrm\\HrmServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "pest",
        "test-coverage": "pest --coverage",
        "analyse": "phpstan analyse",
        "format": "pint"
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
