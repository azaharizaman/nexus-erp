{
    "name": "azaharizaman/erp-serial-numbering",
    "description": "Automated serial number generation system with configurable patterns, atomic generation, and tenant isolation",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Azahari Zaman",
            "email": "azahari@nexusenvision.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^12.0",
        "lorisleiva/laravel-actions": "^2.0"
    },
    "require-dev": {
        "pestphp/pest": "^4.0",
        "laravel/pint": "^1.18"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\Erp\\SerialNumbering\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\Erp\\SerialNumbering\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Nexus\\Erp\\SerialNumbering\\SerialNumberingServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
