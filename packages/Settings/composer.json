{
    "name": "nexus/settings",
    "description": "Hierarchical Settings Management System for ERP with multi-level scopes, encryption, and caching",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Azahari Zaman",
            "email": "azahari@nexusenvision.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "laravel/framework": "^12.0",
        "laravel/scout": "^10.0"
    },
    "require-dev": {
        "laravel/pint": "^1.18"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\Settings\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\Settings\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Nexus\\Settings\\SettingsServiceProvider"
            ],
            "aliases": {
                "Settings": "Nexus\\Settings\\Facades\\Settings"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
